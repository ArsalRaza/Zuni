  <!--   android:padding="@dimen/margin_10" -->
    <ImageView
        android:id="@+id/adapter_product_imageview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="0.3"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"/>
    
        <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="0.7">

        <TextView
            android:id="@+id/adapter_product_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="---"
            android:textColor="@color/light_grey"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/adapter_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/adapter_product_value"
            android:text="Medium Text"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black" />
        
        <TextView
            android:id="@+id/adapter_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/adapter_product_name"
            android:text="Medium Text"
            android:singleLine="true"
            android:textColor="@android:color/black"/>
      	
      	<TextView
            android:id="@+id/adapter_product_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_alignTop="@id/adapter_product_price"
            android:layout_toRightOf="@id/adapter_product_price"
            android:layout_below="@id/adapter_product_name"
            android:text="Medium Text"
            android:textColor="@color/light_grey"
            android:singleLine="true"/>
      	
    </RelativeLayout>
    
