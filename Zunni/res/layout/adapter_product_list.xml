<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp" >

    <android.support.v7.widget.CardView 
        android:id="@+id/adapter_category_first_image_layout"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="@dimen/margin_very_small"
        android:layout_weight="1"
	    android:layout_marginBottom="@dimen/margin_very_small">
	    
		<ImageView
	        android:id="@+id/adapter_product_first_imageview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
		    android:scaleType="centerCrop"
	        android:src="@drawable/ic_launcher" />
	    
        <ImageView
	        android:id="@+id/adapter_category_shade_imageview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
		    android:scaleType="fitXY"
	        android:src="@drawable/transparent_shade" />

		<RelativeLayout
		    android:layout_height="match_parent"
			android:layout_width="match_parent">
        
		 	<LinearLayout 
		 	    android:layout_width="match_parent"
		        android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:layout_marginBottom="@dimen/margin_30"
			    android:layout_marginLeft="@dimen/margin_15"
			    android:layout_marginRight="@dimen/margin_15"
			    android:orientation="horizontal">
			    
			    <TextView 
			        android:id="@+id/adapter_product_first_textview"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
				    android:layout_weight="0.4"
					android:textColor="@android:color/white"
				    android:text="---------"
				    android:maxLines="3"
				    android:ellipsize="end"
			        android:textAppearance="?android:attr/textAppearanceLarge"/>
			 	
			    <RelativeLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
				    android:layout_weight="0.6"
				    android:layout_gravity="bottom|right">
				    
			        <TextView 
				        android:id="@+id/adapter_product_heart_textview"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:textColor="@android:color/white"
						android:layout_alignParentRight="true"
					    android:drawableLeft="@drawable/adapter_heart"
					    android:drawablePadding="@dimen/margin_5"
					    android:text="500"/>
			        
			        <TextView 
				        android:id="@+id/adapter_product_recycle_textview"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:textColor="@android:color/white"
					    android:text="215"
						android:layout_marginRight="@dimen/margin_10"
					    android:drawableLeft="@drawable/adapter_refresh"
					    android:drawablePadding="@dimen/margin_5"
						android:layout_toLeftOf="@+id/adapter_product_heart_textview"/>
			    </RelativeLayout>
		 	</LinearLayout>
		</RelativeLayout>
	</android.support.v7.widget.CardView>
	 	
</RelativeLayout>